@model FileRecord

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Edit File Record</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post" asp-action="Edit">
        <input type="hidden" class="form-control" id="inputEmail3" asp-for="Id">
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Officer's Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail3" asp-for="Name">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">State Code</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="CodeNumber">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3"  asp-for="Description">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Officer's Phone</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="PhoneNumber">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Taken To</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="TakenTo">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Brought From</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="ReturnedFrom">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">shelf Number</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="shelfNumber">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Current Location</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="CurrentLocation">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Collecting Officer</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3" asp-for="CollectingOfficer">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Recording Officer</label>
                <div class="col-sm-10">
                    <input type="datetime" class="form-control" id="inputPassword3" asp-for="RecordingOfficer">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Date Returned</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword3"  asp-for="DateReturned">
                </div>
            </div>

        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success pull-right">Update</button>
        </div><!-- /.box-footer -->
    </form>
</div><!-- /.box -->
